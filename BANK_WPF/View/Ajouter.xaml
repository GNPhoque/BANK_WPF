        <TextBox x:Name="nomBox" HorizontalAlignment="Left" Height="23" Margin="149,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="phoneBox" HorizontalAlignment="Left" Height="23" Margin="149,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="AjouterBtn" Content="Ajouter" HorizontalAlignment="Left" Margin="29,203,0,0" VerticalAlignment="Top" Width="75" Click="AjouterBtn_Click"/>
