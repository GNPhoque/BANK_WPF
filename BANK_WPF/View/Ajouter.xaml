        <Label x:Name="lblErrAdresse" Content="" HorizontalAlignment="Left" Margin="292,99,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblErrDateNaiss" Content="" HorizontalAlignment="Left" Margin="292,130,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblErrPhone" Content="" HorizontalAlignment="Left" Margin="292,156,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dateNaissDate" HorizontalAlignment="Left" Margin="149,131,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblErrAjout" Content="" HorizontalAlignment="Left" Margin="157,228,0,0" VerticalAlignment="Top"/>
